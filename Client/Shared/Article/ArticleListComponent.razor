@using PersonalTechBlog.Shared.Models

@inject IStringLocalizer<AppResources> Localizer

<div class="d-flex flex-column align-items-center">
    <div class="d-flex flex-column w-75" style="margin: 0.5rem;">
        @for (var i = 0; i < Articles.Count; i += 2)
        {
            <div class="d-flex flex-row" style="height: 10rem;">
                <div class="d-flex flex-column w-50 rounded_box elevation cursor_hand"
                     style="margin: 5px; padding: 10px;" @onmouseover:stopPropagation="true">
                    <span class="article_title">@Articles[i].Title</span>
                    <span>@Articles[i].Content</span>
                </div>
                @if (Articles.ElementAtOrDefault(i + 1) is not default(Article))
                {
                    <div class="d-flex flex-column w-50 rounded_box elevation cursor_hand"
                     style="margin: 5px; margin: 10px;" @onmouseover:stopPropagation="true">
                        <span class="article_title">@Articles[i + 1].Title</span>
                        <span>@Articles[i + 1].Content</span>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-column w-50 justify-content-center align-items-center"
                         style="opacity: 0.4;">
                        <div class="box_icon" style="font-size: 2.5rem;"/>
                        <span>
                            @Localizer["emptyLabel"]
                        </span>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public List<Article> Articles { get; set; } =
        new List<Article>();
}